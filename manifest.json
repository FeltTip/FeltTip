{
    "manifest_version":2,
    "name":"FeltTip",
    "version":"1.0",
    "description":"Simple chrome extention for saving data",
    "background":{
        "page":"background.html"
    },

    "icons":{
        "16":"i/16x16.png",
        "32":"i/32x32.png",
        "48":"i/48x48.png",
        "128":"i/128x128.png"
    },

    "permissions":[
        "contextMenus",
        "unlimitedStorage",
        "notifications",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "offline_enabled":true,
    "minimum_chrome_version":"6.0.0.0",

    "browser_action":{
        "default_title":"FeltTip.me",
        "default_icon":"i/icon.png",
        "default_popup":"popup.html"
    }
}